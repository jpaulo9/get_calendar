<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="202dp"

                app:srcCompat="@drawable/denticon" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="Odontologista"
                android:textColor="#EF6C00"
                android:textSize="30sp"
                android:textStyle="bold" />


        </LinearLayout>
        <!-- segundo alinhamento do botÃµes-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="ENTRAR COM"
            android:textColor="#EF6C00"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/but_face"
                android:layout_width="152dp"
                android:layout_height="42dp"
                android:background="#FFFFFF"

                android:drawableLeft="@mipmap/ic_launcher_face"
                android:text="FACEBOOK"
                android:textColor="#EF6C00"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="294dp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/but_go"
                android:layout_width="152dp"
                android:layout_height="42dp"
                android:background="#FFFFFF"

                android:drawableLeft="@mipmap/ic_launcher_google"
                android:gravity="center"
                android:text="GOOGLE"

                android:textColor="#EF6C00"
                tools:layout_editor_absoluteX="200dp" />

        </LinearLayout>


        <TextView
            android:id="@+id/txtX"
            android:layout_width="148dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Ou"
            android:textColor="#EF6C00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/but_contas"
            android:layout_width="294dp"
            android:layout_height="39dp"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="ENTRE COM SUA CONTA DO APP"
            android:textColor="#EF6C00"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>


</ScrollView>