<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        >

        <ImageView
            android:id="@+id/img_pac_icon"
            android:layout_width="100dp"
            android:layout_height="120dp"
            tools:srcCompat="@drawable/ic_event_black_24dp" />

        <TextView
            android:id="@+id/txt_n"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/img_pac_icon" />

        <TextView
            android:id="@+id/txt_tipoPacConsulta"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/txt_n"
            android:layout_toRightOf="@id/img_pac_icon"
            android:text="Removação do Dente"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_data_marcada"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_below="@id/txt_tipoPacConsulta"
            android:layout_toRightOf="@id/img_pac_icon"
            android:text="05/12/2020"
            android:textSize="18sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/btn_dados_consulta"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/txt_n"
            android:layout_toRightOf="@id/txt_tipoPacConsulta"
            tools:srcCompat="@drawable/ic_assignment_black_24dp" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>