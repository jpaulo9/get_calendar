<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".user.Cadastro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_person_add_black_24dp" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="horizontal">

            <!--    LAyout imagens-->
            <!--    Layout campos de texto-->
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="350dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableRight="@drawable/ic_person_black_24dp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:drawableRight="@drawable/ic_date_range_black_24dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:drawableRight="@drawable/ic_phone_black_24dp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableRight="@drawable/ic_subtitles_black_24dp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableRight="@drawable/ic_email_black_24dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableRight="@drawable/ic_https_black_24dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableRight="@drawable/ic_add_location_black_24dp"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/cad_nomeUser"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Nome Completo"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/edt_data"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Data de Nascimento(dd/mm/ano)"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/edt_celular"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Celular"
                    android:inputType="phone" />


                <EditText
                    android:id="@+id/edt_cpf"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="CPF"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/cad_emailUser"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="E-mail"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/cad_senhaUser"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Senha"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/cad_cidadeUser"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Cidade"
                    android:inputType="textPersonName" />


            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btn_cadastrarUser"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rad_buttom"
            android:text="SALVAR"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <ImageView
            android:id="@+id/btn_retorn_login"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />

        <TextView
            android:id="@+id/textw"
            android:layout_width="match_parent"
            android:layout_height="40dp" />


    </LinearLayout>


</ScrollView>