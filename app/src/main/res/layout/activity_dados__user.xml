<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.Dados_User">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_up"
                app:srcCompat="@drawable/ic_person_add_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:srcCompat="@drawable/ic_account_circle_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="horizontal">

            <!--    LAyout imagens-->
            <!--    Layout campos de texto-->
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="350dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableRight="@drawable/ic_person_black_24dp" />

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:drawableRight="@drawable/ic_date_range_black_24dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:drawableRight="@drawable/ic_phone_black_24dp" />

                <TextView
                    android:id="@+id/txt4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableRight="@drawable/ic_subtitles_black_24dp" />

                <TextView
                    android:id="@+id/txt5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableRight="@drawable/ic_email_black_24dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/txt6"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableRight="@drawable/ic_https_black_24dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/txt7"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableRight="@drawable/ic_add_location_black_24dp"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edt_up_nome"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Nome Completo"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/edt_data_up"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Data de Nascimento(dd/mm/ano)"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/edt_up_celular"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Celular"
                    android:inputType="phone" />


                <EditText
                    android:id="@+id/edt_cpf_up"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="CPF"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/edt_up_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="E-mail"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/edt_senha_up"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Senha"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/edt_up_cidade"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Cidade"
                    android:inputType="textPersonName" />


            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btn_up_date"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rad_buttom"
            android:text="ATUALIZAR"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt10"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/btn_volt_home_up"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:drawableBottom="@drawable/ic_keyboard_arrow_left_black_24dp" />


    </LinearLayout>














</ScrollView>