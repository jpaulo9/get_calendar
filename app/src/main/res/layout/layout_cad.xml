<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/ic_account_circle_black_24dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:textColor="#EF6C00"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_below="@id/imageView2"/>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:drawableBottom="@drawable/ic_email_black_24dp" />

    <EditText
        android:id="@+id/email_login"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textPersonName"
        android:textColorHighlight="#EF6C00"
        android:textColorHint="#EF6C00"
        android:textColorLink="#EF6C00"
        android:layout_toRightOf="@id/textView4"
        android:layout_below="@id/textView3"
        android:textSize="14sp" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_login"
            android:drawableBottom="@drawable/ic_lock_black_24dp"
            android:gravity="center" />

        <EditText
            android:id="@+id/senha_login"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPersonName"
            android:textColorHighlight="#EF6C00"
            android:textColorHint="#EF6C00"
            android:textColorLink="#EF6C00"
            android:layout_toRightOf="@id/textView5"
            android:layout_below="@id/email_login"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/senha_login"
            android:gravity="center" />

        <Button
            android:id="@+id/bt_userLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/circle_edt"
            android:text="ENTRAR"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_below="@id/textView2"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_IrCad"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@id/bt_userLogin"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Ainda nÃ£o tem cadastro? Crie sua conta."
            android:textColor="#EF6C00"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recuperar_senha"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@id/btn_IrCad"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Esqueceu sua senha?"
            android:textColor="#EF6C00"
            android:textStyle="bold" />

    </RelativeLayout>


</ScrollView>