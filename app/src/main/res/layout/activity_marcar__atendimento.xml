<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.Marcar_Atendimento">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView61"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="MARCAR CONSULTA"
            android:textAlignment="center"
            android:textColor="#EF6C00"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView62"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView61"/>

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView62"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/textView58"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/calendarView"/>

        <TextView
            android:id="@+id/textView60"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@id/textView58"
            android:text="DATA DA CONSULTA:"
            android:textColor="#EF6C00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/data_register"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/textView58"
            android:layout_toRightOf="@id/textView60"
            android:text="data_user"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView64"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/data_register" />

        <TextView
            android:id="@+id/textView68"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/textView64"
            android:text="PROCEDIMENTO MÃ‰DICO:"
            android:textColor="#EF6C00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/textView68" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinner"/>

        <Button
            android:id="@+id/btn_addAgenga"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView6"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_edt"
            android:text="AGENDAR"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_retorn_homeUser"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_addAgenga"
            android:layout_centerHorizontal="true"
            android:drawableBottom="@drawable/ic_keyboard_arrow_left_black_24dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>